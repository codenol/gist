{
  "table": {
    "header": {
      "background": {
        "default": "{semantic_functional.color.background.secondary}"
      },
      "text": {
        "default": "{semantic_functional.color.text.primary}",
        "sorted": "{semantic_functional.color.action.primary}"
      },
      "border": {
        "default": "{semantic_functional.color.border.default}"
      }
    },
    "row": {
      "background": {
        "default": "{semantic_functional.color.background.primary}",
        "hover": "{semantic_functional.color.background.secondary}",
        "selected": "{semantic_functional.color.action.primary}",
        "selected_hover": "{semantic_functional.color.action.primary_hover}"
      },
      "text": {
        "default": "{semantic_functional.color.text.primary}",
        "selected": "{semantic_functional.color.text.inverse}"
      },
      "border": {
        "default": "{semantic_functional.color.border.default}"
      }
    },
    "cell": {
      "padding": {
        "x": "{semantic_functional.spacing.padding.medium}",
        "y": "{semantic_functional.spacing.padding.small}"
      },
      "text": {
        "default": "{semantic_functional.color.text.primary}",
        "secondary": "{semantic_functional.color.text.secondary}"
      }
    },
    "border": {
      "default": "{semantic_functional.color.border.default}",
      "header": "{semantic_functional.color.border.default}"
    },
    "typography": {
      "header": {
        "font_size": "{semantic_functional.typography.font_size.body}",
        "font_weight": "{semantic_functional.typography.font_weight.body_emphasis}",
        "line_height": "{semantic_functional.typography.line_height.body}"
      },
      "body": {
        "font_size": "{semantic_functional.typography.font_size.body}",
        "font_weight": "{semantic_functional.typography.font_weight.body}",
        "line_height": "{semantic_functional.typography.line_height.body}"
      }
    },
    "spacing": {
      "row_gap": "{semantic_functional.spacing.gap.none}",
      "cell_gap": "{semantic_functional.spacing.gap.small}"
    }
  }
}

