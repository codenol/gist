      "line_height": "{semantic_roles.typography.role.body.line_height}"
    },
    "size": {
      "small": {
        "padding": {
          "x": "{semantic_roles.spacing.role.compact}",
          "y": "{semantic_roles.spacing.role.compact}"
        },
        "font_size": "{semantic_roles.typography.role.body_small.font_size}"
      },
      "medium": {
        "padding": {
          "x": "{semantic_roles.spacing.role.regular}",
          "y": "{semantic_roles.spacing.role.compact}"
        },
        "font_size": "{semantic_roles.typography.role.body.font_size}"
      },
      "large": {
        "padding": {
          "x": "{semantic_roles.spacing.role.spacious}",
          "y": "{semantic_roles.spacing.role.regular}"
        },
        "font_size": "{semantic_roles.typography.role.heading.font_size}"
