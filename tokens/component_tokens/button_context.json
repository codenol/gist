{
  "button": {
    "primary": {
      "background": {
        "default": "{base.color.blue.500}",
        "hover": "{base.color.blue.600}",
        "active": "{base.color.blue.700}",
        "disabled": "{base.color.gray.400}"
      },
      "text": {
        "default": "{base.color.white}",
        "disabled": "{base.color.gray.400}"
      },
      "border": {
        "default": "{base.color.blue.500}",
        "disabled": "{base.color.gray.200}"
      }
    },
    "secondary": {
      "background": {
        "default": "{base.color.gray.100}",
        "hover": "{base.color.gray.200}",
        "active": "{base.color.gray.300}",
        "disabled": "{base.color.gray.100}"
      },
      "text": {
        "default": "{base.color.gray.900}",
        "disabled": "{base.color.gray.400}"
      },
      "border": {
        "default": "{base.color.gray.300}",
        "disabled": "{base.color.gray.200}"
      }
    },
    "padding": {
      "x": "{base.spacing.md}",
      "y": "{base.spacing.sm}"
    },
    "gap": "{base.spacing.sm}",
    "border_radius": "{base.border_radius.md}",
    "typography": {
      "font_size": "{base.typography.font_size.base}",
      "font_weight": "{base.typography.font_weight.medium}",
      "line_height": "{base.typography.line_height.normal}"
    },
    "size": {
      "small": {
        "padding": {
          "x": "{base.spacing.sm}",
          "y": "{base.spacing.sm}"
        },
        "font_size": "{base.typography.font_size.sm}"
      },
      "medium": {
        "padding": {
          "x": "{base.spacing.md}",
          "y": "{base.spacing.sm}"
        },
        "font_size": "{base.typography.font_size.base}"
      },
      "large": {
        "padding": {
          "x": "{base.spacing.lg}",
          "y": "{base.spacing.md}"
        },
        "font_size": "{base.typography.font_size.lg}"
      }
    },
    "shadow": {
      "default": "{base.shadow.sm}",
      "hover": "{base.shadow.md}"
    }
  }
}
